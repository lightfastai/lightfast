{
  "name": "lightfast",
  "version": "0.1.0-alpha.5",
  "description": "Lightfast Neural Memory SDK - TypeScript client for the Lightfast Memory API",
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "keywords": [
    "lightfast",
    "memory",
    "ai",
    "semantic-search",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lightfastai/lightfast.git",
    "directory": "core/lightfast"
  },
  "homepage": "https://lightfast.ai",
  "bugs": "https://github.com/lightfastai/lightfast/issues",
  "license": "Apache-2.0",
  "author": "Lightfast <hello@lightfast.ai>",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.mjs"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.mjs"
    }
  },
  "scripts": {
    "clean": "rm -rf dist .cache .turbo node_modules",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@repo/console-types": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
