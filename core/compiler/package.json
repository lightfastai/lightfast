{
  "name": "@lightfastai/compiler",
  "version": "0.2.0",
  "description": "TypeScript configuration compiler for Lightfast",
  "keywords": [
    "lightfast",
    "compiler",
    "typescript",
    "config"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lightfastai/lightfast.git",
    "directory": "core/compiler"
  },
  "homepage": "https://lightfast.ai",
  "bugs": "https://github.com/lightfastai/lightfast/issues",
  "license": "Apache-2.0",
  "author": "Lightfast <hello@lightfast.ai>",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cache": {
      "types": "./dist/cache.d.ts",
      "import": "./dist/cache.js"
    },
    "./transpiler": {
      "types": "./dist/transpiler.d.ts",
      "import": "./dist/transpiler.js"
    },
    "./watcher": {
      "types": "./dist/watcher.d.ts",
      "import": "./dist/watcher.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist .turbo node_modules coverage"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.9",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "memfs": "^4.38.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
