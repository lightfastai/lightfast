{
  "name": "@repo/webgl",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./shaders/pnoise": {
      "types": "./dist/shaders/pnoise/pnoise.d.ts",
      "default": "./src/shaders/pnoise/pnoise.ts"
    },
    "./shaders/limit": {
      "types": "./dist/shaders/limit/limit.d.ts",
      "default": "./src/shaders/limit/limit.ts"
    },
    "./schema/vec3": {
      "types": "./dist/schema/vec3.d.ts",
      "default": "./src/schema/vec3.ts"
    },
    "./schema/color": {
      "types": "./dist/schema/color.d.ts",
      "default": "./src/schema/color.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@react-three/drei": "^9.114.5",
    "@react-three/fiber": "^8.17.10",
    "@repo/ui": "workspace:*",
    "json-schema": "^0.4.0",
    "three": "^0.169.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/three": "^0.169.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
