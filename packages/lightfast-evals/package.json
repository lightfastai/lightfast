{
	"name": "@lightfast/evals",
	"version": "1.0.0",
	"description": "Evaluation framework for Lightfast AI agents",
	"main": "src/index.ts",
	"types": "src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./agents/*": {
			"types": "./src/agents/*.ts",
			"default": "./src/agents/*.ts"
		},
		"./lib/*": {
			"types": "./src/lib/*.ts",
			"default": "./src/lib/*.ts"
		},
		"./scripts/*": {
			"types": "./src/scripts/*.ts",
			"default": "./src/scripts/*.ts"
		}
	},
	"scripts": {
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"build": "tsc",
		"dev": "tsc",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"lint": "biome check --write .",
		"with-env": "dotenv -e ../../apps/www/.env.local --"
	},
	"dependencies": {
		"@lightfastai/core": "workspace:*",
		"ai": "catalog:",
		"braintrust": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^24.0.15",
		"dotenv-cli": "^8.0.0",
		"tsx": "^4.20.3",
		"typescript": "catalog:"
	}
}
