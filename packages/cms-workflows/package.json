{
  "name": "@repo/cms-workflows",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./mutations/blog": "./src/mutations/blog.ts",
    "./mutations/changelog": "./src/mutations/changelog.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../apps/www/.vercel/.env.development.local --",
    "publish:blog": "pnpm with-env tsx scripts/publish-blog.ts",
    "publish:changelog": "pnpm with-env tsx scripts/publish-changelog.ts"
  },
  "dependencies": {
    "@repo/ai": "workspace:*",
    "@vendor/cms": "workspace:*",
    "basehub": "^9.5.2",
    "gray-matter": "^4.0.3",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.0",
    "zod": "catalog:zod3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/mdast": "^4.0.0",
    "@types/node": "catalog:",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.19.2",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
