{
	"name": "@lightfast/core",
	"version": "0.1.0",
	"description": "AI agents, tools, and workflows for Lightfast",
	"keywords": ["ai", "agents", "llm", "typescript", "workflow"],
	"repository": {
		"type": "git",
		"url": "https://github.com/lightfastai/lightfast.git",
		"directory": "packages/lightfast-core"
	},
	"homepage": "https://lightfast.ai",
	"bugs": "https://github.com/lightfastai/lightfast/issues",
	"license": "MIT",
	"author": "Lightfast Team",
	"main": "./dist/agent.cjs",
	"module": "./dist/agent.js",
	"types": "./dist/agent.d.ts",
	"type": "module",
	"exports": {
		"./agent": {
			"types": "./dist/agent.d.ts",
			"import": "./dist/agent.js",
			"require": "./dist/agent.cjs"
		},
		"./tool": {
			"types": "./dist/tool.d.ts",
			"import": "./dist/tool.js",
			"require": "./dist/tool.cjs"
		},
		"./agent/handlers": {
			"types": "./dist/agent/handlers.d.ts",
			"import": "./dist/agent/handlers.js",
			"require": "./dist/agent/handlers.cjs"
		},
		"./agent/server/adapters/fetch": {
			"types": "./dist/agent/server/adapters/fetch.d.ts",
			"import": "./dist/agent/server/adapters/fetch.js",
			"require": "./dist/agent/server/adapters/fetch.cjs"
		},
		"./agent/server/adapters/types": {
			"types": "./dist/agent/server/adapters/types.d.ts",
			"import": "./dist/agent/server/adapters/types.js",
			"require": "./dist/agent/server/adapters/types.cjs"
		},
		"./agent/memory": {
			"types": "./dist/agent/memory.d.ts",
			"import": "./dist/agent/memory.js",
			"require": "./dist/agent/memory.cjs"
		},
		"./memory": {
			"types": "./dist/memory.d.ts",
			"import": "./dist/memory.js",
			"require": "./dist/memory.cjs"
		},
		"./memory/adapters/in-memory": {
			"types": "./dist/memory/adapters/in-memory.d.ts",
			"import": "./dist/memory/adapters/in-memory.js",
			"require": "./dist/memory/adapters/in-memory.cjs"
		},
		"./agent/memory/adapters/redis": {
			"types": "./dist/agent/memory/adapters/redis.d.ts",
			"import": "./dist/agent/memory/adapters/redis.js",
			"require": "./dist/agent/memory/adapters/redis.cjs"
		},
		"./agent/memory/redis": {
			"types": "./dist/agent/memory/redis.d.ts",
			"import": "./dist/agent/memory/redis.js",
			"require": "./dist/agent/memory/redis.cjs"
		},
		"./agent/redis-memory": {
			"types": "./dist/agent/redis-memory.d.ts",
			"import": "./dist/agent/redis-memory.js",
			"require": "./dist/agent/redis-memory.cjs"
		},
		"./agent/primitives/cache": {
			"types": "./dist/agent/primitives/cache.d.ts",
			"import": "./dist/agent/primitives/cache.js",
			"require": "./dist/agent/primitives/cache.cjs"
		},
		"./providers": {
			"types": "./dist/providers.d.ts",
			"import": "./dist/providers.js",
			"require": "./dist/providers.cjs"
		}
	},
	"scripts": {
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"build": "tsup && pnpm build:types",
		"build:js": "tsup",
		"build:types": "tsc --project tsconfig.build.json",
		"build:turbo": "tsc",
		"dev": "tsc",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"lint": "biome check --write ."
	},
	"dependencies": {
		"@ai-sdk/anthropic": "catalog:",
		"@ai-sdk/gateway": "catalog:",
		"@ai-sdk/provider": "catalog:",
		"@t3-oss/env-core": "catalog:",
		"@upstash/qstash": "^2.8.1",
		"@upstash/redis": "catalog:",
		"ai": "catalog:",
		"braintrust": "catalog:",
		"pino": "^9.7.0",
		"resumable-stream": "catalog:",
		"uuid": "^11.1.0",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^24.0.15",
		"@types/react": "^19.1.8",
		"@types/uuid": "^10.0.0",
		"tsup": "^8.5.0",
		"typescript": "catalog:"
	}
}
