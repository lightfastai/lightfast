{
	"name": "@lightfastai/core",
	"version": "0.1.0",
	"description": "AI agents, tools, and workflows for Lightfast",
	"keywords": [
		"ai",
		"agents",
		"llm",
		"typescript",
		"workflow"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lightfastai/lightfast.git",
		"directory": "packages/lightfast-core"
	},
	"homepage": "https://lightfast.ai",
	"bugs": "https://github.com/lightfastai/lightfast/issues",
	"license": "MIT",
	"author": "Lightfast Team",
	"main": "./dist/agent.cjs",
	"module": "./dist/agent.js",
	"types": "./dist/agent.d.ts",
	"type": "module",
	"exports": {
		"./agent": {
			"types": "./dist/agent.d.ts",
			"import": "./dist/agent.js",
			"require": "./dist/agent.cjs"
		},
		"./tool": {
			"types": "./dist/tool.d.ts",
			"import": "./dist/tool.js",
			"require": "./dist/tool.cjs"
		},
		"./server/adapters/fetch": {
			"types": "./dist/server/adapters/fetch.d.ts",
			"import": "./dist/server/adapters/fetch.js",
			"require": "./dist/server/adapters/fetch.cjs"
		},
		"./server/adapters/types": {
			"types": "./dist/server/adapters/types.d.ts",
			"import": "./dist/server/adapters/types.js",
			"require": "./dist/server/adapters/types.cjs"
		},
		"./memory": {
			"types": "./dist/memory.d.ts",
			"import": "./dist/memory.js",
			"require": "./dist/memory.cjs"
		},
		"./memory/adapters/in-memory": {
			"types": "./dist/memory/adapters/in-memory.d.ts",
			"import": "./dist/memory/adapters/in-memory.js",
			"require": "./dist/memory/adapters/in-memory.cjs"
		},
		"./memory/adapters/redis": {
			"types": "./dist/memory/adapters/redis.d.ts",
			"import": "./dist/memory/adapters/redis.js",
			"require": "./dist/memory/adapters/redis.cjs"
		},
		"./cache": {
			"types": "./dist/cache.d.ts",
			"import": "./dist/cache.js",
			"require": "./dist/cache.cjs"
		},
		"./providers": {
			"types": "./dist/providers.d.ts",
			"import": "./dist/providers.js",
			"require": "./dist/providers.cjs"
		},
		"./v2/agent": {
			"types": "./dist/v2/agent.d.ts",
			"import": "./dist/v2/agent.js",
			"require": "./dist/v2/agent.cjs"
		},
		"./v2/server": {
			"types": "./dist/v2/server.d.ts",
			"import": "./dist/v2/server.js",
			"require": "./dist/v2/server.cjs"
		},
		"./v2/react": {
			"types": "./dist/v2/react.d.ts",
			"import": "./dist/v2/react.js",
			"require": "./dist/v2/react.cjs"
		},
		"./v2/core": {
			"types": "./dist/v2/core.d.ts",
			"import": "./dist/v2/core.js",
			"require": "./dist/v2/core.cjs"
		},
		"./v2": {
			"types": "./dist/v2/index.d.ts",
			"import": "./dist/v2/index.js",
			"require": "./dist/v2/index.cjs"
		},
		"./v2/utils": {
			"types": "./dist/v2/utils.d.ts",
			"import": "./dist/v2/utils.js",
			"require": "./dist/v2/utils.cjs"
		},
		"./v2/events": {
			"types": "./dist/v2/events.d.ts",
			"import": "./dist/v2/events.js",
			"require": "./dist/v2/events.cjs"
		},
		"./v2/env": {
			"types": "./dist/v2/env.d.ts",
			"import": "./dist/v2/env.js",
			"require": "./dist/v2/env.cjs"
		},
		"./v2/braintrust-env": {
			"types": "./dist/v2/braintrust-env.d.ts",
			"import": "./dist/v2/braintrust-env.js",
			"require": "./dist/v2/braintrust-env.cjs"
		}
	},
	"scripts": {
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit",
		"lint": "biome check --write ."
	},
	"dependencies": {
		"@ai-sdk/anthropic": "catalog:",
		"@ai-sdk/gateway": "catalog:",
		"@ai-sdk/provider": "catalog:",
		"@t3-oss/env-core": "catalog:",
		"@upstash/qstash": "^2.8.1",
		"@upstash/redis": "catalog:",
		"ai": "catalog:",
		"braintrust": "catalog:",
		"pino": "^9.7.0",
		"resumable-stream": "catalog:",
		"uuid": "^11.1.0",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@rollup/rollup-darwin-arm64": "^4.46.2",
		"@types/node": "^24.0.15",
		"@types/react": "^19.1.8",
		"@types/uuid": "^10.0.0",
		"rollup": "^4.46.2",
		"tsup": "^8.5.0",
		"typescript": "catalog:",
		"vitest": "^3.2.4"
	}
}
