{
  "extends": "@repo/typescript-config/internal-package.json",
  "include": ["src"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"]
  },
  "exclude": ["node_modules", "dist"]
}
