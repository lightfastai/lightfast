{
  "name": "lightfast-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Lightfast experimental monorepo",
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev:web": "turbo run dev --filter=@lightfast/web",
    "dev:mastra": "mastra dev --dir packages/ai/src/mastra",
    "build:web": "turbo run build --filter=@lightfast/web",
    "build:mastra": "mastra build --dir packages/ai/src/mastra"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "better-sqlite3",
      "esbuild",
      "protobufjs",
      "sharp"
    ]
  }
}