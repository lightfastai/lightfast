{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["node"],
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "${configDir}/dist"
  },
  "exclude": ["node_modules", "dist"]
}
