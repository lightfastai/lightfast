{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:inngest": {
      "cache": false,
      "persistent": true
    },
    "dev:qstash": {
      "cache": false,
      "persistent": true
    },
    "dev:studio": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [".cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "migrate": {
      "cache": false
    },
    "migrate:generate": {
      "cache": false
    },
    "studio": {
      "cache": false,
      "persistent": true
    },
    "dev:email": {
      "cache": false,
      "persistent": true
    },
    "ui": {
      "cache": false,
      "interactive": true
    },
    "eval": {
      "cache": false,
      "interactive": true
    }
  },
  "globalEnv": [
    // Database
    "POSTGRES_URL",
    "DATABASE_HOST",
    "DATABASE_USERNAME",
    "DATABASE_PASSWORD",

    // Clerk Authentication
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY",
    "NEXT_PUBLIC_CLERK_SIGN_IN_URL",
    "NEXT_PUBLIC_CLERK_SIGN_UP_URL",
    "NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL",
    "NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL",
    "CLERK_MACHINE_SECRET_KEY_TRPC",
    "CLERK_MACHINE_SECRET_KEY_WEBHOOK",
    "CLERK_MACHINE_SECRET_KEY_INNGEST",

    // Sentry
    "NEXT_PUBLIC_SENTRY_DSN",
    "SENTRY_DSN",
    "SENTRY_ORG",
    "SENTRY_PROJECT",
    "SENTRY_AUTH_TOKEN",
    "NEXT_PUBLIC_SENTRY_ENVIRONMENT",

    // BetterStack/Logtail
    "NEXT_PUBLIC_BETTER_STACK_SOURCE_TOKEN",
    "NEXT_PUBLIC_BETTER_STACK_INGESTING_URL",
    "NEXT_PUBLIC_LOGTAIL_SOURCE_TOKEN",
    "LOGTAIL_URL",
    "LOGTAIL_SOURCE_TOKEN",

    // Inngest
    "INNGEST_APP_NAME",
    "INNGEST_EVENT_KEY",
    "INNGEST_SIGNING_KEY",

    // GitHub
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GITHUB_WEBHOOK_SECRET",
    "GITHUB_APP_ID",
    "GITHUB_APP_SLUG",
    "GITHUB_APP_PRIVATE_KEY",

    // AI & Embeddings
    "ANTHROPIC_API_KEY",
    "OPENAI_API_KEY",
    "COHERE_API_KEY",
    "PINECONE_API_KEY",

    // Lightfast
    "LIGHTFAST_API_KEY",
    "LIGHTFAST_API_URL",
    "LIGHTFAST_WORKSPACE",

    // Security & Encryption
    "ENCRYPTION_KEY",
    "ARCJET_KEY",
    "ARCJET_SITE_KEY",

    // Email
    "RESEND_API_KEY",
    "RESEND_EARLY_ACCESS_AUDIENCE_ID",

    // Storage & Cache
    "KV_URL",
    "KV_REST_API_TOKEN",
    "KV_REST_API_URL",
    "KV_REST_API_READ_ONLY_TOKEN",
    "BLOB_READ_WRITE_TOKEN",
    "BLOB_BASE_URI",

    // Analytics
    "NEXT_PUBLIC_POSTHOG_HOST",
    "NEXT_PUBLIC_POSTHOG_KEY",
    "POSTHOG_API_KEY",

    // Other Services
    "EXA_API_KEY",
    "BRAINTRUST_API_KEY",
    "BRAINTRUST_PROJECT_NAME",
    "BASEHUB_TOKEN",
    "BASEHUB_CHANGELOG_TOKEN",
    "BROWSERBASE_API_KEY",
    "BROWSERBASE_PROJECT_ID",
    "AI_GATEWAY_API_KEY",
    "NEXT_PUBLIC_API_URL",
    "HEALTH_CHECK_AUTH_TOKEN",
    "NEXT_PUBLIC_VERCEL_ENV"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "npm_lifecycle_event",
    "ENVIRONMENT",
    "DEBUG",
    "PORT"
  ]
}
