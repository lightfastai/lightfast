{
  "_comment": "Reference of all available MCP servers. Use 'pnpm claude [-b] [-e] [-a]' to start Claude with specific servers.",
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--isolated",
        "--user-data-dir=/tmp/playwright-mcp",
        "--storage-state=.auth/browser-session.json"
      ]
    },
    "exa": {
      "command": "bash",
      "args": [".mcp/start-exa.sh"]
    },
    "knock": {
      "command": "bash",
      "args": [".mcp/start-knock.sh"]
    },
    "lightfast": {
      "command": "bash",
      "args": [".mcp/start-lightfast.sh"]
    }
  }
}
