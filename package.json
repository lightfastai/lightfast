{
  "name": "x",
  "private": true,
  "engines": {
    "node": ">=20.16.0",
    "pnpm": "^9.6.0"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules .turbo",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @repo/db push",
    "db:studio": "turbo -F @repo/db studio",
    "db:migrate": "turbo -F @repo/db migrate",
    "db:migrate:generate": "turbo -F @repo/db migrate:generate",
    "db:migrate:generate:custom": "turbo -F @repo/db migrate:generate:custom",
    "dev": "turbo run dev --parallel --filter=@dahlia/app --filter=@dahlia/api --filter=@dahlia/www",
    "dev:dahlia-www": "turbo watch dev -F @dahlia/www --continue",
    "dev:dahlia-api": "turbo watch dev -F @dahlia/api --continue",
    "dev:dahlia-app": "turbo watch dev -F @dahlia/app --continue",
    "dev:jps0000-www": "turbo watch dev -F @jps0000/www --continue",
    "dev:jps0000-brand": "turbo watch dev -F @jps0000/brand --continue",
    "brain": "turbo run eval",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui": "pnpm --filter @repo/ui ui"
  },
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "prettier": "catalog:",
    "turbo": "^2.3.1",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
