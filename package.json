{
  "name": "lightfast",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "10.5.2"
  },
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "build": "turbo run build",
    "build:www": "turbo run build -F @lightfast/www",
    "build:www-search": "turbo run build -F @lightfast/www-search",
    "build:auth": "turbo run build -F @lightfast/auth",
    "build:chat": "turbo run build -F @lightfast/chat",
    "build:docs": "turbo run build -F @lightfast/docs",
    "build:deus": "turbo run build -F @lightfast/deus",
    "clean": "git clean -xdf node_modules .turbo .internal",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo run dev --parallel --filter=@lightfast/www --filter=@lightfast/docs --filter=@lightfast/auth --filter=@lightfast/chat",
    "dev:search": "turbo run dev --parallel --filter=@lightfast/www-search",
    "dev:marketting": "turbo run dev --parallel --filter=@lightfast/www --filter=@lightfast/docs --filter=@lightfast/www-search",
    "dev:auth": "turbo watch dev -F @lightfast/auth --continue",
    "dev:chat": "turbo watch dev -F @lightfast/chat --continue",
    "dev:docs": "turbo watch dev -F @lightfast/docs --continue",
    "dev:deus": "turbo watch dev -F @lightfast/deus --continue",
    "dev:auth+docs": "turbo run dev --parallel --filter=@lightfast/docs --filter=@lightfast/auth",
    "dev:email": "turbo run dev:email -F @lightfast/www",
    "brain": "turbo run eval",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws && node scripts/postinstall.js",
    "typecheck": "turbo run typecheck",
    "ui": "pnpm --filter @repo/ui ui",
    "vercel:link": "vercel link --repo",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@lightfastai/dual": "^1.2.2",
    "@repo/prettier-config": "workspace:*",
    "envmcp": "^0.2.1",
    "keytar": "^7.9.0",
    "prettier": "catalog:",
    "turbo": "^2.5.5",
    "turbo-ignore": "^2.5.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.1",
    "vite": "^6.3.5"
  },
  "prettier": "@repo/prettier-config",
  "pnpm": {
    "overrides": {
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "@types/react": "^19.1.11",
      "@types/react-dom": "^19.1.8"
    }
  }
}
