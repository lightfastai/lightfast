{
  "name": "@vendor/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./lightfast/schema": "./src/lightfast/schema/index.ts",
    "./client": "./src/client.ts",
    "./env": "./env.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "migrate": "pnpm with-env-lightfast drizzle-kit migrate --config=./src/lightfast/drizzle.config.ts",
    "migrate:generate": "pnpm with-env-lightfast drizzle-kit generate --config=./src/lightfast/drizzle.config.ts",
    "studio": "pnpm with-env-lightfast drizzle-kit studio --config=./src/lightfast/drizzle.config.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "with-env-lightfast": "dotenv -e ../../apps/cloud/.vercel/.env.development.local --"
  },
  "dependencies": {
    "@planetscale/database": "^1.19.0",
    "@repo/ai": "workspace:*",
    "@repo/lib": "workspace:*",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
