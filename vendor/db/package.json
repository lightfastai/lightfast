{
  "name": "@vendor/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./app/schema": "./src/app/src/schema.ts",
    "./config": "./src/config.ts",
    "./env": "./env.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "migrate:app": "pnpm with-env drizzle-kit migrate --config=./src/app/drizzle.config.ts",
    "migrate:generate:app": "pnpm with-env drizzle-kit generate --config=./src/app/drizzle.config.ts",
    "migrate:generate:tenant": "pnpm with-env drizzle-kit generate --config=./src/tenant/drizzle.config.ts",
    "push": "pnpm with-env run-p push:*",
    "push:app": "pnpm with-env drizzle-kit push --config=./src/app/drizzle.config.ts",
    "push:tenant": "pnpm with-env drizzle-kit push --config=./src/tenant/drizzle.config.ts",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@neondatabase/api-client": "^1.10.3",
    "@neondatabase/serverless": "^0.10.4",
    "@repo/lib": "workspace:*",
    "drizzle-orm": "^0.35.1",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.5",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.26.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
