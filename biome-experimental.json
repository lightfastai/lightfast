{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"files": {
		"ignoreUnknown": true,
		"experimentalScannerIgnores": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/out/**",
			"**/.vercel/**",
			"**/coverage/**",
			"**/*.min.js",
			"**/.mastra/**",
			"**/.next/**",
			"**/.cache/**",
			"**/.turbo/**",
			"**/.vscode/**",
			"**/.git/**",
			"**/pnpm-lock.yaml",
			"**/package-lock.json",
			"**/yarn.lock",
			"**/test-results/**",
			"**/__snapshots__/**",
			"**/.nyc_output/**",
			"**/tsconfig.tsbuildinfo",
			"**/*.tsbuildinfo",
			"**/tmp/**",
			"**/temp/**",
			"**/.tmp/**",
			"**/*.sqlite",
			"**/*.db",
			"**/.pnp",
			"**/.pnp.js",
			"**/.yarn/install-state.gz",
			"**/mastra.db",
			"**/mastra.db-journal"
		],
		"includes": [
			"**",
			"!**/node_modules/**",
			"!**/dist/**",
			"!**/build/**",
			"!**/out/**",
			"!**/.vercel/**",
			"!**/coverage/**",
			"!**/*.min.js",
			"!**/*.d.ts",
			"!**/*.config.js",
			"!**/*.config.ts",
			"!**/*.config.mjs",
			"!**/.mastra/**",
			"!**/.next/**",
			"!**/.cache/**",
			"!**/.turbo/**",
			"!**/.vscode/**",
			"!**/.git/**",
			"!**/.env",
			"!**/.env.*",
			"!**/pnpm-lock.yaml",
			"!**/package-lock.json",
			"!**/yarn.lock",
			"!**/.DS_Store",
			"!**/Thumbs.db",
			"!**/*.swp",
			"!**/*.swo",
			"!**/*~",
			"!**/test-results/**",
			"!**/__snapshots__/**",
			"!**/*.log",
			"!**/*.pid",
			"!**/.nyc_output/**",
			"!**/tsconfig.tsbuildinfo",
			"!**/*.tsbuildinfo",
			"!**/tmp/**",
			"!**/temp/**",
			"!**/.tmp/**",
			"!**/*.sqlite",
			"!**/*.db",
			"!**/.pnp",
			"!**/.pnp.js",
			"!**/.yarn/install-state.gz",
			"!**/*.pem",
			"!**/npm-debug.log*",
			"!**/yarn-debug.log*",
			"!**/yarn-error.log*",
			"!**/next-env.d.ts",
			"!**/mastra.db",
			"!**/mastra.db-journal"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 120,
		"attributePosition": "auto"
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	}
}
