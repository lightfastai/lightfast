{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"paths": {
			"@/*": ["./*"]
		},
		"target": "ES2017"
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist", ".mastra"]
}
