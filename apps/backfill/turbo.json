{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tags": ["app"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "passThroughEnv": [
        "GATEWAY_URL",
        "GATEWAY_API_KEY",
        "INNGEST_APP_NAME",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "GITHUB_APP_ID",
        "GITHUB_APP_PRIVATE_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true,
      "interruptible": true
    }
  }
}
