{
	"name": "@lightfast/v2",
	"version": "1.0.0",
	"description": "V2 Event-Driven Architecture Testing Server",
	"type": "module",
	"scripts": {
		"dev": "pnpm with-env tsx watch src/index.ts",
		"dev:direct": "QSTASH_DIRECT_URL=true pnpm dev",
		"dev:test": "pnpm with-env-test tsx watch src/index.ts",
		"build": "pnpm with-env tsc",
		"start": "pnpm with-env node dist/index.js",
		"typecheck": "tsc --noEmit",
		"lint": "biome check --write .",
		"with-env": "dotenv -e ./.env.local --",
		"with-env-test": "dotenv -e ./.env.test --",
		"clean": "git clean -xdf .cache .turbo dist node_modules"
	},
	"dependencies": {
		"@hono/node-server": "^1.17.1",
		"@lightfast/ai": "workspace:*",
		"@upstash/qstash": "^2.8.1",
		"@upstash/redis": "catalog:",
		"hono": "^4.6.17",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/node": "^24.0.15",
		"dotenv-cli": "^8.0.0",
		"tsx": "^4.20.3",
		"typescript": "catalog:"
	}
}
