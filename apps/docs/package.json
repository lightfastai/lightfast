{
  "name": "@lightfast/docs",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm with-env next dev --port ${NEXT_PUBLIC_DOCS_PORT:-4105} --turbo",
    "build": "pnpm build:prod",
    "build:dev": "next build --turbopack",
    "build:prod": "pnpm with-env next build --turbopack && pnpm with-env pnpm search:sync:ci",
    "prebuild": "pnpm --filter @repo/console-openapi generate:openapi && tsx scripts/validate-schema-docs.ts",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next .turbo dist .source tsconfig.tsbuildinfo",
    "postinstall": "fumadocs-mdx",
    "with-env": "dotenv -e ./.vercel/.env.development.local --",
    "generate:api-docs": "pnpm --filter @repo/console-openapi generate:openapi",
    "search:sync": "mxbai store sync $MXBAI_STORE_ID \"./src/content/**/*.mdx\" --api-key $MXBAI_API_KEY",
    "search:sync:ci": "mxbai store sync $MXBAI_STORE_ID \"./src/content/**/*.mdx\" --api-key $MXBAI_API_KEY -y"
  },
  "dependencies": {
    "@mixedbread/sdk": "^0.50.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-portal": "^1.1.10",
    "@repo/app-urls": "workspace:*",
    "@repo/og": "workspace:*",
    "@repo/ui": "workspace:*",
    "@repo/url-utils": "workspace:*",
    "@sentry/nextjs": "^10.20.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@vendor/next": "workspace:*",
    "@vendor/observability": "workspace:*",
    "@vendor/seo": "workspace:*",
    "@vercel/microfrontends": "^2.3.0",
    "@vercel/related-projects": "catalog:",
    "clsx": "^2.1.1",
    "framer-motion": "^11.18.2",
    "fumadocs-core": "16.5.4",
    "fumadocs-mdx": "14.2.7",
    "fumadocs-openapi": "^10.3.4",
    "fumadocs-ui": "16.5.4",
    "geist": "catalog:",
    "github-slugger": "^2.0.0",
    "lucide-react": "catalog:",
    "next": "catalog:next16",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "remove-markdown": "^0.6.3",
    "shiki": "^3.9.2",
    "tailwind-merge": "^3.3.1",
    "zod": "catalog:zod4"
  },
  "devDependencies": {
    "@mixedbread/cli": "^2.1.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "catalog:tailwind4",
    "@types/mdx": "^2.0.13",
    "@types/node": "catalog:",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "import-in-the-middle": "catalog:",
    "postcss": "catalog:tailwind4",
    "prettier": "catalog:",
    "require-in-the-middle": "catalog:",
    "tailwindcss": "catalog:tailwind4",
    "tsx": "^4.19.2",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config",
  "license": "Apache-2.0"
}
