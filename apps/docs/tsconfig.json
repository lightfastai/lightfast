{
	"extends": "@repo/typescript-config/nextjs",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@/*": ["./*"]
		},
		"noUncheckedIndexedAccess": false,
		"skipLibCheck": true,
		"types": ["node", "react", "react-dom"]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".source/**/*"
	],
	"exclude": ["node_modules", "tmp_repo"]
}
