{
  "name": "@lightfast/desktop",
  "version": "0.1.0",
  "private": true,
  "author": "lightfastai <support@lightfast.ai>",
  "description": "Lightfast Desktop",
  "main": "dist-electron/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightfastai/lightfast.git"
  },
  "scripts": {
    "clean": "rm -rf dist dist-electron node_modules .cache",
    "dev": "vite --mode development",
    "dev:debug": "VSCODE_DEBUG=true vite --mode development",
    "start": "electron .",
    "build": "rm -rf dist dist-electron .cache && tsc && vite build && electron-builder",
    "build:dir": "rm -rf dist dist-electron .cache && tsc && vite build && electron-builder --dir",
    "preview": "vite preview",
    "pree2e": "vite build --mode=test",
    "e2e": "playwright test",
    "format": "prettier --check . --ignore-path ../../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "electron": "36.0.0",
    "electron-builder": "26.0.12",
    "eslint": "^8.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.0.0",
    "vite": "^6.3.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "prettier": "@repo/prettier-config"
}
