{
  "name": "@lightfast/desktop",
  "version": "0.1.0",
  "private": true,
  "author": "lightfastai <support@lightfast.ai>",
  "description": "Lightfast Desktop",
  "main": ".vite/build/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightfastai/lightfast.git"
  },
  "scripts": {
    "dev": "dotenv -e ./.internal/.env.development.local -- tsx ../../node_modules/@electron-forge/cli/src/electron-forge-start",
    "package": "tsx ../../node_modules/@electron-forge/cli/src/electron-forge-package",
    "make": "tsx ../../node_modules/@electron-forge/cli/src/electron-forge-make",
    "publish": "tsx ../../node_modules/@electron-forge/cli/src/electron-forge-publish",
    "clean": "rm -rf dist dist-electron node_modules .cache",
    "dev:debug": "dotenv -e ./.internal/.env.development.local -- VSCODE_DEBUG=true vite --mode development",
    "build": "rm -rf dist dist-electron .cache && tsc && vite build && electron-builder",
    "build:dir": "rm -rf dist dist-electron .cache && tsc && vite build && electron-builder --dir",
    "preview": "vite preview",
    "pree2e": "vite build --mode=test",
    "e2e": "playwright test",
    "format": "prettier --check . --ignore-path ../../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/ai": "workspace:*",
    "@repo/trpc-client": "workspace:*",
    "@repo/ui": "workspace:*",
    "@t3-oss/env-core": "^0.12.0",
    "@tailwindcss/vite": "^4.1.4",
    "@vendor/clerk": "workspace:*",
    "@vendor/trpc": "workspace:*",
    "babel-plugin-react-compiler": "^19.0.0-beta-e993439-20250328",
    "bufferutil": "^4.0.9",
    "electron-squirrel-startup": "^1.0.1",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "react-icons": "^5.5.0",
    "superjson": "2.2.1",
    "utf-8-validate": "^6.0.5",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron-forge/plugin-vite": "^7.8.0",
    "@electron-forge/shared-types": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@playwright/test": "^1.41.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tanstack/react-router": "^1.117.1",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.2",
    "electron": "^35.2.1",
    "electron-devtools-installer": "^4.0.0",
    "electron-playwright-helpers": "^1.7.1",
    "eslint": "catalog:",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "tailwindcss": "catalog:tailwind4",
    "typescript": "catalog:",
    "vite": "^6.3.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "ws": "^8.18.1"
  },
  "prettier": "@repo/prettier-config"
}
