{
  "appId": "com.lightfast.app",
  "productName": "Lightfast",
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist/**/*", "dist-electron/**/*"],
  "mac": {
    "target": ["dmg", "zip"],
    "category": "public.app-category.developer-tools",
    "darkModeSupport": true
  },
  "win": {
    "target": ["nsis", "zip"]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Development"
  },
  "publish": {
    "provider": "github",
    "private": true
  }
}
