{
  "name": "lightfast-chat",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:www": "turbo run build --filter=@lightfast/www",
    "build:docs": "turbo run build --filter=@lightfast/docs",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint --cache-dir=.turbo/cache",
    "format": "turbo run format --cache-dir=.turbo/cache",
    "clean": "turbo run clean",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:turbo": "find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "clean:deps": "pnpm run clean:modules && pnpm run clean:turbo",
    "dev:www": "turbo run dev --filter=@lightfast/www",
    "dev:docs": "turbo run dev --filter=@lightfast/docs",
    "dev:app": "turbo run dev --filter=@lightfast/chat",
    "typecheck": "turbo run typecheck",
    "vercel-build": "cd apps/www && pnpx convex deploy --cmd 'turbo build --filter=@lightfast/www'",
    "ui:add": "pnpm --filter=@lightfast/ui ui:add",
    "ui:diff": "pnpm --filter=@lightfast/ui ui:diff",
    "env:sync": "tsx scripts/sync-env.ts",
    "env:sync:auto": "tsx scripts/sync-env.ts",
    "env:check": "pnpm exec convex env list",
    "convex:dev": "pnpm exec convex dev",
    "predev": "pnpm env:sync:auto",
    "prebuild": "pnpm env:sync:auto"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightfastai/chat.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lightfastai/chat/issues"
  },
  "homepage": "https://github.com/lightfastai/chat#readme",
  "description": "Lightfast Chat - Turborepo Monorepo",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@turbo/gen": "^2.5.0",
    "convex": "^1.24.8",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=18",
    "pnpm": "10.5.2"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@tailwindcss/oxide",
    "@vercel/speed-insights"
  ]
}
