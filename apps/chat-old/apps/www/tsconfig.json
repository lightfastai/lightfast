{
	"extends": "@repo/typescript/nextjs",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/convex/*": ["./convex/*"]
		},
		"noUncheckedIndexedAccess": false
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src"
	],
	"exclude": ["node_modules", ".next", "worktrees", "scripts", "tmp_repo"]
}
