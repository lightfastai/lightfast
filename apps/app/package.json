{
  "name": "@lightfast/app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules .env.sentry-build-plugin .clerk",
    "dev": "pnpm with-env next dev -p 4100",
    "analyze": "ANALYZE=true pnpm with-env next build",
    "format": "prettier --check . --ignore-path ../../../.gitignore",
    "lint": "eslint",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ./.vercel/.env.development.local --",
    "db:migrate": "pnpm with-env drizzle-kit migrate --config=./src/db/drizzle.config.ts",
    "db:generate": "pnpm with-env drizzle-kit generate --config=./src/db/drizzle.config.ts"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.0.3",
    "@repo/ai": "workspace:*",
    "@repo/lightfast-js": "workspace:*",
    "@repo/trpc-client": "workspace:*",
    "@repo/ui": "workspace:*",
    "@t3-oss/env-nextjs": "0.12.0",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "@trpc/tanstack-react-query": "catalog:",
    "@vendor/db": "workspace:*",
    "@vendor/next": "workspace:*",
    "@vendor/openauth": "workspace:^",
    "@vendor/trpc": "workspace:*",
    "geist": "^1.3.1",
    "lucide-react": "catalog:",
    "next": "catalog:",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "redis": "^5.0.0",
    "superjson": "2.2.1",
    "svix": "^1.62.0",
    "zod": "catalog:",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.2",
    "eslint": "catalog:",
    "jiti": "^1.21.6",
    "postcss": "catalog:tailwind4",
    "tailwindcss": "catalog:tailwind4",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
