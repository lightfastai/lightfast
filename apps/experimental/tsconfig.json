{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/mastra/*": [
        "../../packages/ai/src/mastra/*"
      ]
    },
    "composite": true,
    "tsBuildInfoFile": "./.next/.tsbuildinfo",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/ai"
    },
    {
      "path": "../../packages/types"
    },
    {
      "path": "../../packages/evals"
    }
  ]
}
