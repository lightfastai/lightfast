{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [],
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./*"],
      "@vendor/cms/*": ["../../vendor/cms/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext"
  },
  "include": [".", ".next/types/**/*.ts", ".source/**/*"],
  "exclude": ["node_modules"]
}
