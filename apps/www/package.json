{
  "name": "@lightfast/www",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "pnpm build:prod",
    "build:dev": "pnpm with-env:dev sh -c \"pnpm -F @vendor/cms run basehub:build && next build --turbopack\"",
    "build:prod": "pnpm with-env:prod sh -c \"pnpm -F @vendor/cms run basehub:build && next build --turbopack\"",
    "clean": "git clean -xdf .cache .clerk .next .turbo .vercel node_modules",
    "dev": "pnpm with-env:dev next dev --port $(microfrontends port) --turbo",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "pnpm with-env:prod next start -p ${NEXT_PUBLIC_WWW_PORT:-4101}",
    "typecheck": "tsc --noEmit",
    "with-env:dev": "dual run --",
    "with-env:prod": "dotenv -e ./.vercel/.env.development.local --"
  },
  "dependencies": {
    "@repo/app-urls": "workspace:*",
    "@repo/deus-billing": "workspace:*",
