    "@vendor/seo": "workspace:*",
    "@vendor/upstash": "workspace:*",
    "@vercel/microfrontends": "^2.0.1",
    "@vercel/related-projects": "catalog:",
    "framer-motion": "^11.3.19",
    "geist": "catalog:",
    "jotai": "^2.12.3",
    "lucide-react": "catalog:",
    "neverthrow": "catalog:",
    "next": "catalog:",
    "react": "19.2.0",
    "react-confetti": "^6.4.0",
