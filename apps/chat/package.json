  "name": "@lightfast/chat",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm build:prod",
    "build:dev": "pnpm with-env:dev next build --turbopack",
    "build:prod": "pnpm with-env:prod next build --turbopack",
    "clean": "git clean -xdf .cache .clerk .next .turbo .vercel node_modules",
    "dev": "pnpm with-env:dev next dev --turbopack --port ${NEXT_PUBLIC_CHAT_PORT:-4106}",
    "lint": "eslint",
    "start": "pnpm with-env:prod next start -p ${NEXT_PUBLIC_CHAT_PORT:-4106}",
    "typecheck": "tsc --noEmit",
    "with-env:dev": "dual run --",
    "with-env:prod": "dotenv -e ./.vercel/.env.development.local --",
    "eval:citations": "pnpm with-env:dev npx braintrust eval ./src/eval/citation-format.eval.ts",
    "eval:concise": "pnpm with-env:dev npx braintrust eval ./src/eval/concise-format.eval.ts",
    "eval:tool-calls": "pnpm with-env:dev npx braintrust eval ./src/eval/tool-calls.eval.ts",
    "eval:tool-repair": "pnpm with-env:dev npx braintrust eval ./src/eval/tool-call-repair.eval.ts",
    "eval:general-qa": "pnpm with-env:dev npx braintrust eval ./src/eval/general-qa.eval.ts",
    "eval:security": "pnpm with-env:dev npx braintrust eval ./src/eval/security-compliance.eval.ts",
    "eval:all": "pnpm with-env:dev npx braintrust eval ./src/eval/",
    "eval:tools": "pnpm with-env:dev npx braintrust eval ./src/eval/tool-calls.eval.ts ./src/eval/tool-call-repair.eval.ts"
  },
