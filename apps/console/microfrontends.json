{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "lightfast-console": {
      "packageName": "@lightfast/console",
      "development": {
        "local": 4107,
        "fallback": "lightfast-console.vercel.app"
      }
    },
    "lightfast-www": {
      "packageName": "@lightfast/www",
      "development": {
        "local": 4101
      },
      "routing": [
        {
          "group": "marketing",
          "paths": [
            "/",
            "/opengraph-image-:hash",
            "/api/og/search-demo",
            "/pricing",
            "/pricing/opengraph-image-:hash",
            "/changelog",
            "/changelog/:path*",
            "/blog",
            "/blog/:path*",
            "/use-cases",
            "/use-cases/:path",
            "/use-cases/:path/opengraph-image-:hash",
            "/early-access",
            "/early-access/opengraph-image-:hash",
            "/legal/:path*",
            "/search",
            "/preview",
            "/pitch-deck",
            "/unicorn-test",
            "/api/health",
            "/images/:path*",
            "/fonts/:path*",
            "/favicon.ico",
            "/android-chrome-192x192.png",
            "/android-chrome-512x512.png",
            "/apple-touch-icon.png",
            "/favicon-16x16.png",
            "/favicon-32x32.png"
          ]
        }
      ]
    },
    "lightfast-auth": {
      "packageName": "@lightfast/auth",
      "development": {
        "local": 4104
      },
      "routing": [
        {
          "group": "auth",
          "paths": [
            "/sign-in",
            "/sign-in/:path*",
            "/sign-up",
            "/sign-up/opengraph-image-:hash"
          ]
        }
      ]
    }
  }
}
