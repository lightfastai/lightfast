{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "lightfast-console": {
      "packageName": "@lightfast/console",
      "development": {
        "local": 4107,
        "fallback": "app.lightfast.ai"
      }
    },
    "lightfast-www": {
      "packageName": "@lightfast/www",
      "development": {
        "local": 4101
      },
      "routing": [
        {
          "group": "marketing",
          "paths": [
            "/",
            "/pricing",
            "/changelog",
            "/changelog/:path*",
            "/blog",
            "/blog/:path*",
            "/use-cases",
            "/early-access",
            "/legal/:path*",
            "/search",
            "/api/health",
            "/images/:path*",
            "/fonts/:path*",
            "/favicon.ico",
            "/og.jpg",
            "/og-bg-only.jpg",
            "/android-chrome-192x192.png",
            "/android-chrome-512x512.png",
            "/apple-touch-icon.png",
            "/favicon-16x16.png",
            "/favicon-32x32.png"
          ]
        }
      ]
    },
    "lightfast-auth": {
      "packageName": "@lightfast/auth",
      "development": {
        "local": 4104
      },
      "routing": [
        {
          "group": "auth",
          "paths": ["/sign-in", "/sign-in/:path*", "/sign-up"]
        }
      ]
    }
  }
}
