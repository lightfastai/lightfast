{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tags": ["app"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_BETTER_STACK_SOURCE_TOKEN",
        "NEXT_PUBLIC_BETTER_STACK_INGESTING_URL",
        "NEXT_PUBLIC_KNOCK_PUBLIC_API_KEY",
        "NEXT_PUBLIC_GITHUB_APP_SLUG",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_VERCEL_INTEGRATION_SLUG"
      ],
      "passThroughEnv": [
        "SENTRY_AUTH_TOKEN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "CLERK_SECRET_KEY",
        "CLERK_MACHINE_SECRET_KEY_TRPC",
        "CLERK_MACHINE_SECRET_KEY_WEBHOOK",
        "CLERK_MACHINE_SECRET_KEY_INNGEST",
        "DATABASE_HOST",
        "DATABASE_USERNAME",
        "DATABASE_PASSWORD",
        "LOGTAIL_SOURCE_TOKEN",
        "LOGTAIL_URL",
        "KNOCK_API_KEY",
        "GITHUB_APP_ID",
        "GITHUB_APP_PRIVATE_KEY",
        "GITHUB_APP_SLUG",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GITHUB_WEBHOOK_SECRET",
        "VERCEL_INTEGRATION_SLUG",
        "VERCEL_CLIENT_SECRET_ID",
        "VERCEL_CLIENT_INTEGRATION_SECRET",
        "VERCEL_REDIRECT_URI",
        "KV_REST_API_URL",
        "KV_REST_API_TOKEN",
        "BASEHUB_TOKEN",
        "BASEHUB_ADMIN_TOKEN",
        "HEALTH_CHECK_AUTH_TOKEN",
        "QSTASH_TOKEN",
        "QSTASH_CURRENT_SIGNING_KEY",
        "QSTASH_NEXT_SIGNING_KEY",
        "ENCRYPTION_KEY",
        "GATEWAY_API_KEY",
        "PORT"
      ],
      "outputs": [".next/**", "!.next/cache/**", "!.next/dev/**", "next-env.d.ts"]
    },
    "dev": {
      "persistent": true,
      "with": [
        "@lightfast/console#dev:inngest",
        "@lightfast/console#dev:qstash",
        "@lightfast/console#dev:ngrok",
        "@db/console#dev:studio"
      ]
    },
    "transit": {}
  }
}
